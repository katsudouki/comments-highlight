{
  "name": "comments-highlight",
  "displayName": "Comments Highlight",
  "description": "Highlight specific comments with custom background color and icon",
  "version": "0.0.1",
  "author": "katsudouki <katsudouki@outlook.com.br>",
  "license": "MIT",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/katsudouki/comments-highlight"
  },
  "keywords": [
    "highlight",
    "comments",
    "syntax highlighting",
    "code comments",
    "comment highlighting",
    "code annotation",
    "VSCode",
    "developer tools",
    "color coding",
    "custom highlights"
  ],
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./src/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Comments Highlight",
      "properties": {
        "commentsHighlight.fullLine": {
          "type": "boolean",
          "default": false,
          "description": "Apply background color to the full line of the comment"
        },
        "commentsHighlight.configurations": {
          "type": "array",
          "default": [
            {
              "prefixicon":"üì∞ ",
              "text": "NOTE:",
              "color": "#ecf0f1",
              "border": "1px solid rgba(255, 89, 194, 0.3)",
              "borderRadius": "4px",
              "backgroundColor": "rgba(255, 89, 194, 0.3)"
          },
          {
              "prefixicon":"üìò ",
              "text": "INFO:",
              "color": "#ecf0f1",
              "border": "1px solid rgba(52, 152, 219, 0.3)",
              "borderRadius": "4px",
              "backgroundColor": "rgba(52, 152, 219, 0.3)"
          },
          {   "prefixicon":"üíª ",
             "text": "HACK:",
              "color": "#ecf0f1",
              "border": "1px solid rgba(155, 89, 182, 0.3)",
              "borderRadius": "4px",
              "backgroundColor": "rgba(155, 89, 182, 0.3)"
          },
          {
              "prefixicon":"‚ö†Ô∏è ",
              "text": "FIXME:",
              "color": "#ecf0f1",
              "border": "1px solid rgba(241, 196, 15, 0.3)",
              "borderRadius": "4px",
              "backgroundColor": "rgba(241, 196, 15, 0.3)"
          },
          {
              "prefixicon":"üêõ ",
              "text": "BUG:",
              "color": "#ecf0f1",
              "border": "1px solid rgba(231, 76, 60, 0.3)",
              "borderRadius": "4px",
              "backgroundColor": "rgba(231, 76, 60, 0.3)"
          },
          {  "prefixicon":"üìö ",
              "text": "TODO:",
              "color": "#ecf0f1",
              "border": "1px solid rgba(46, 204, 113, 0.3)",
              "borderRadius": "4px",
              "backgroundColor": "rgba(46, 204, 113, 0.3)"
          }
          ],
          "description": "List of comment configurations to highlight"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node ./node_modules/vscode/bin/compile",
    "watch": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "vscode": "^1.1.33",
    "typescript": "^4.0.3",
    "tslint": "^6.1.3"
  }
}
